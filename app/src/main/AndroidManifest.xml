<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logoular_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logoular_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme._1pertemuan">

        <!-- Splash screen sebagai launcher pertama -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Halaman lain -->
        <activity android:name=".MainActivity" android:exported="false" />
        <activity android:name=".SignUpActivity" android:exported="false" />
        <activity android:name=".ForgotPasswordActivity" android:exported="false" />

    </application>
</manifest>
